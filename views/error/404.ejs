<%- include('../includes/head') %>
<body class="bg-gray-50 min-h-screen">
  <%- include('../includes/navigation', { 
    user: typeof user !== 'undefined' ? user : null, 
    isAdmin: typeof isAdmin !== 'undefined' ? isAdmin : false, 
    isAuthenticated: typeof isAuthenticated !== 'undefined' ? isAuthenticated : false, 
    cartCount: typeof cartCount !== 'undefined' ? cartCount : 0,
    favorites: typeof favorites !== 'undefined' ? favorites : []
  }) %>

  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-red-600 to-orange-600 text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-6xl font-bold mb-6">
        <i class="ri-error-warning-line text-8xl mb-4"></i><br>
        404
      </h1>
      <p class="text-2xl mb-8 max-w-2xl mx-auto">
        Không tìm thấy trang bạn đang tìm kiếm
      </p>
      <div class="flex justify-center space-x-4">
        <a href="/" class="bg-white text-red-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition">
          <i class="ri-home-line mr-2"></i>
          Về trang chủ
        </a>
        <button onclick="history.back()" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-red-600 transition">
          <i class="ri-arrow-left-line mr-2"></i>
          Quay lại
        </button>
      </div>
    </div>
  </section>

  <!-- Error Details -->
  <section class="py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        
        <!-- Error Message -->
        <div class="bg-white rounded-2xl shadow-lg p-8 mb-8 text-center">
          <h2 class="text-2xl font-bold text-gray-800 mb-4">Trang không tồn tại</h2>
          <p class="text-gray-600 mb-6">
            <%= typeof message !== 'undefined' ? message : 'Trang bạn đang tìm kiếm không tồn tại hoặc đã bị di chuyển.' %>
          </p>
          
          <% if (typeof url !== 'undefined' && url) { %>
            <div class="bg-gray-100 rounded-lg p-4 mb-6">
              <p class="text-sm text-gray-500 mb-2">URL không tìm thấy:</p>
              <code class="text-red-600 font-mono"><%= typeof url === 'string' ? url : '' %></code>
            </div>
          <% } %>
        </div>

        <!-- Helpful Links -->
        <div class="bg-white rounded-2xl shadow-lg p-8">
          <h3 class="text-2xl font-bold text-gray-800 mb-6 text-center">Có thể bạn đang tìm:</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <a href="/products" class="bg-gray-50 rounded-xl p-6 hover:bg-blue-50 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 text-center">
              <div class="bg-blue-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="ri-store-line text-2xl text-blue-600"></i>
              </div>
              <h4 class="font-semibold text-gray-800 mb-2">Sản phẩm</h4>
              <p class="text-sm text-gray-600">Khám phá các sản phẩm thú cưng</p>
            </a>
            
            <a href="/services" class="bg-gray-50 rounded-xl p-6 hover:bg-green-50 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 text-center">
              <div class="bg-green-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="ri-customer-service-line text-2xl text-green-600"></i>
              </div>
              <h4 class="font-semibold text-gray-800 mb-2">Dịch vụ</h4>
              <p class="text-sm text-gray-600">Các dịch vụ chăm sóc thú cưng</p>
            </a>
            
            <a href="/news" class="bg-gray-50 rounded-xl p-6 hover:bg-purple-50 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 text-center">
              <div class="bg-purple-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="ri-newspaper-line text-2xl text-purple-600"></i>
              </div>
              <h4 class="font-semibold text-gray-800 mb-2">Tin tức</h4>
              <p class="text-sm text-gray-600">Tin tức mới nhất về thú cưng</p>
            </a>
            
            <a href="/contact" class="bg-gray-50 rounded-xl p-6 hover:bg-yellow-50 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 text-center">
              <div class="bg-yellow-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="ri-mail-line text-2xl text-yellow-600"></i>
              </div>
              <h4 class="font-semibold text-gray-800 mb-2">Liên hệ</h4>
              <p class="text-sm text-gray-600">Liên hệ với chúng tôi</p>
            </a>
            
            <a href="/cart" class="bg-gray-50 rounded-xl p-6 hover:bg-red-50 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 text-center">
              <div class="bg-red-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="ri-shopping-cart-line text-2xl text-red-600"></i>
              </div>
              <h4 class="font-semibold text-gray-800 mb-2">Giỏ hàng</h4>
              <p class="text-sm text-gray-600">Xem giỏ hàng của bạn</p>
            </a>
            
            <a href="/auth/orders" class="bg-gray-50 rounded-xl p-6 hover:bg-indigo-50 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 text-center">
              <div class="bg-indigo-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="ri-file-list-line text-2xl text-indigo-600"></i>
              </div>
              <h4 class="font-semibold text-gray-800 mb-2">Đơn hàng</h4>
              <p class="text-sm text-gray-600">Theo dõi đơn hàng</p>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="bg-gray-900 text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Cần hỗ trợ?</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        Liên hệ với chúng tôi để được hỗ trợ nhanh chóng
      </p>
      <div class="flex justify-center space-x-4">
        <a href="/contact" class="bg-red-600 hover:bg-red-700 text-white px-8 py-3 rounded-lg font-semibold transition">
          <i class="ri-customer-service-line mr-2"></i>
          Liên hệ ngay
        </a>
        <a href="/" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-gray-900 transition">
          Về trang chủ
        </a>
      </div>
    </div>
  </section>

  <%- include('../includes/end') %>
  
  <script>
    // Auto redirect sau 30 giây
    setTimeout(() => {
      if (confirm('Bạn có muốn được chuyển về trang chủ không?')) {
        window.location.href = '/';
      }
    }, 30000);
  </script>
</body>
</html>