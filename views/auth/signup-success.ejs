<%- include('../includes/head') %>

<body class="bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 font-roboto min-h-screen">
    <%- include('../includes/navigation') %>
    
    <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-2xl">
            <!-- Success Card -->
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-100">
                <div class="p-8 text-center">
                    <!-- Success Icon -->
                    <div class="mb-6">
                        <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="ri-check-line text-4xl text-green-600"></i>
                        </div>
                        <h1 class="text-3xl font-bold text-gray-800 mb-2">Đăng ký thành công!</h1>
                        <p class="text-gray-600 text-lg">Chào mừng bạn đến với Pet Store</p>
                    </div>

                    <!-- User Info -->
                    <div class="bg-gradient-to-r from-indigo-50 to-purple-50 rounded-xl p-6 mb-6">
                        <div class="flex items-center justify-center gap-4 mb-4">
                            <div class="w-12 h-12 bg-indigo-100 rounded-full flex items-center justify-center">
                                <i class="ri-user-line text-2xl text-indigo-600"></i>
                            </div>
                            <div class="text-left">
                                <h3 class="font-semibold text-gray-800"><%= user.name %></h3>
                                <p class="text-gray-600"><%= user.email %></p>
                            </div>
                        </div>
                        <p class="text-sm text-gray-600">Tài khoản của bạn đã được tạo và đăng nhập tự động</p>
                    </div>

                    <!-- Next Steps -->
                    <div class="space-y-4 mb-8">
                        <h3 class="text-xl font-semibold text-gray-800 mb-4">Bước tiếp theo</h3>
                        <div class="grid md:grid-cols-3 gap-4">
                            <div class="bg-blue-50 rounded-xl p-4 border border-blue-100">
                                <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center mx-auto mb-3">
                                    <i class="ri-store-line text-white"></i>
                                </div>
                                <h4 class="font-semibold text-gray-800 mb-2">Khám phá sản phẩm</h4>
                                <p class="text-sm text-gray-600">Xem các sản phẩm thú cưng chất lượng</p>
                            </div>
                            
                            <div class="bg-green-50 rounded-xl p-4 border border-green-100">
                                <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-3">
                                    <i class="ri-user-settings-line text-white"></i>
                                </div>
                                <h4 class="font-semibold text-gray-800 mb-2">Cập nhật thông tin</h4>
                                <p class="text-sm text-gray-600">Hoàn thiện hồ sơ cá nhân</p>
                            </div>
                            
                            <div class="bg-purple-50 rounded-xl p-4 border border-purple-100">
                                <div class="w-10 h-10 bg-purple-500 rounded-full flex items-center justify-center mx-auto mb-3">
                                    <i class="ri-coupon-line text-white"></i>
                                </div>
                                <h4 class="font-semibold text-gray-800 mb-2">Nhận ưu đãi</h4>
                                <p class="text-sm text-gray-600">Khám phá các khuyến mãi hấp dẫn</p>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a href="/" 
                           class="bg-gradient-to-r from-indigo-500 to-purple-600 text-white px-8 py-3 rounded-xl font-semibold hover:from-indigo-600 hover:to-purple-700 transition-all duration-300 shadow-lg hover:shadow-xl flex items-center justify-center gap-2">
                            <i class="ri-home-line"></i>
                            Về trang chủ
                        </a>
                        
                        <a href="/auth/profile" 
                           class="border-2 border-indigo-500 text-indigo-600 px-8 py-3 rounded-xl font-semibold hover:bg-indigo-500 hover:text-white transition-all duration-300 flex items-center justify-center gap-2">
                            <i class="ri-user-settings-line"></i>
                            Hồ sơ cá nhân
                        </a>
                    </div>

                    <!-- Additional Info -->
                    <div class="mt-8 pt-6 border-t border-gray-200">
                        <div class="bg-yellow-50 rounded-xl p-4 border border-yellow-100">
                            <div class="flex items-center gap-3 mb-3">
                                <i class="ri-mail-line text-yellow-600 text-xl"></i>
                                <h4 class="font-semibold text-gray-800">Kiểm tra email</h4>
                            </div>
                            <p class="text-sm text-gray-600">
                                Chúng tôi đã gửi email xác nhận đến <strong><%= user.email %></strong>. 
                                Vui lòng kiểm tra hộp thư và xác nhận tài khoản của bạn.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Benefits Reminder -->
            <div class="mt-8 text-center">
                <div class="bg-gradient-to-r from-green-50 to-blue-50 rounded-2xl p-6 border border-green-100">
                    <h3 class="font-semibold text-gray-800 mb-3 flex items-center justify-center gap-2">
                        <i class="ri-gift-line text-green-600"></i>
                        Lợi ích dành cho thành viên
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm text-gray-700">
                        <div class="flex items-center gap-2">
                            <i class="ri-check-line text-green-500"></i>
                            <span>Miễn phí vận chuyển</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <i class="ri-check-line text-green-500"></i>
                            <span>Ưu đãi đặc biệt</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <i class="ri-check-line text-green-500"></i>
                            <span>Hỗ trợ 24/7</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Auto redirect to home page after 10 seconds
        setTimeout(() => {
            window.location.href = '/';
        }, 10000);
        
        // Show countdown
        let countdown = 10;
        const countdownElement = document.createElement('div');
        countdownElement.className = 'fixed bottom-4 right-4 bg-gray-800 text-white px-4 py-2 rounded-lg text-sm';
        countdownElement.innerHTML = `Tự động chuyển trang sau ${countdown} giây`;
        document.body.appendChild(countdownElement);
        
        const countdownInterval = setInterval(() => {
            countdown--;
            countdownElement.innerHTML = `Tự động chuyển trang sau ${countdown} giây`;
            if (countdown <= 0) {
                clearInterval(countdownInterval);
                countdownElement.remove();
            }
        }, 1000);
    </script>

    <%- include('../includes/end') %>
</body> 