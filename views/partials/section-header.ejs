<!-- Section Header Component -->
<section class="mb-12 text-center px-4">
  <div class="flex flex-col items-center justify-center gap-6 max-w-4xl mx-auto">
    <div class="bg-gradient-to-r from-<%= iconColor || 'blue' %>-500 to-<%= iconColor2 || 'purple' %>-600 text-white rounded-full p-6 shadow-2xl mb-4 transform hover:scale-105 transition-all duration-300">
      <i class="<%= icon %> text-4xl"></i>
    </div>
    <h1 class="text-4xl md:text-5xl font-bold text-<%= titleColor || 'blue' %>-600 mb-4"><%= title %></h1>
    <p class="max-w-2xl text-gray-600 text-lg leading-relaxed"><%= description %></p>
  </div>
</section> 