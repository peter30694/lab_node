        } else {
            if (typeof showToast === 'function') {
                showToast(data.message || 'C√≥ l·ªói x·∫£y ra', 'error');
            }
        }
    } catch (error) {
        console.error('Error:', error);
        if (typeof showToast === 'function') {
            showToast('C√≥ l·ªói x·∫£y ra khi th√™m s·∫£n ph·∫©m', 'error');
        }
    }
}

