        const data = await response.json();
        
        if (data.success) {
            if (typeof showToast === 'function') {
                showToast('ƒê√£ th√™m s·∫£n ph·∫©m v√†o gi·ªè h√†ng', 'success');
            }
            if (typeof updateCartCount === 'function') {
