    <!-- Main Content -->
    <main class="flex-1">

<!-- Hero Section -->
<section class="relative bg-gradient-to-r from-blue-600 to-purple-600 text-white py-20">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-5xl font-bold mb-6 fade-in">Chào mừng đến với Pet Store</h1>
            <p class="text-xl mb-8 opacity-90">Nơi yêu thương và chăm sóc tốt nhất cho những người bạn bốn chân của bạn</p>
                                <div class="flex justify-center space-x-4">
                        <a href="/products" class="bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-8 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105">
                            Xem sản phẩm
                        </a>
                        <a href="/services" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-gray-900 transition-all duration-300 transform hover:scale-105">
                            <i class="ri-service-line mr-2"></i>
                            Dịch vụ
                        </a>
                    </div>
        </div>
    </div>
    <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-gray-50 to-transparent"></div>
</section>

<!-- Categories Section -->
<section id="categories" class="py-16">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-800 mb-4">Danh mục sản phẩm</h2>
