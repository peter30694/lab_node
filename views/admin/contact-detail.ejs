<%- include('../includes/head.ejs') %>
<body class="bg-gray-50 min-h-screen">
  <%- include('../includes/navigation-admin.ejs') %>
  <main class="ml-64 min-h-screen bg-gray-50 py-8 px-4 pb-24">
    <div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-lg p-8">
      <h1 class="text-2xl font-bold mb-4 text-gray-800">Chi tiết liên hệ</h1>
      <% if (contact) { %>
        <div class="mb-4">
          <strong>Email:</strong> <%= contact.email %><br>
          <% if (contact.type === 'contact') { %>
            <strong>Tên:</strong> <%= contact.name || '-' %><br>
            <strong>Chủ đề:</strong> <%= contact.subject || '-' %><br>
            <strong>Nội dung:</strong> <%= contact.message || '-' %><br>
          <% } %>
          <strong>Loại:</strong> <%= contact.type %><br>
          <strong>Trạng thái:</strong> <%= contact.status %><br>
          <strong>Ngày gửi:</strong> <%= contact.createdAt ? new Date(contact.createdAt).toLocaleString('vi-VN') : '-' %><br>
        </div>
      <% } else { %>
        <div class="text-red-600">Không tìm thấy liên hệ này.</div>
      <% } %>
      <a href="/admin/contacts" class="mt-4 inline-block bg-gray-600 hover:bg-gray-700 text-white px-6 py-2 rounded-lg font-semibold transition">Quay lại danh sách</a>
    </div>
  </main>
  <%- include('../includes/end.ejs') %>
</body> 